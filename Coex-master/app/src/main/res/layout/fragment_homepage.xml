<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.homepage.HomepageFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/hello"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/user"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <ImageView
                android:id="@+id/exitBtn"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_baseline_exit_to_app_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView6"
                app:tint="@color/green_dark" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:background="@color/browser_actions_bg_grey"
                app:layout_constraintTop_toBottomOf="@+id/nameTV"
                tools:layout_editor_absoluteX="12dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardBackgroundColor="@color/browser_actions_bg_grey"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@+id/view"
                tools:layout_editor_absoluteX="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="@string/room_name"
                            android:textColor="@color/green_dark"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/roomName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="@string/room_name"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/allExpenseBtn"
                            android:layout_width="0dp"
                            android:layout_height="130dp"
                            android:layout_marginEnd="12dp"
                            android:layout_weight="1"
                            android:elevation="6dp"
                            app:cardBackgroundColor="@color/green_dark"
                            app:cardCornerRadius="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="12dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:fontFamily="@font/quicksand_bold"
                                    android:text="@string/all_expense"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_baseline_list_24"
                                    app:tint="@color/white" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/addExpenseBtn"
                            android:layout_width="0dp"
                            android:layout_height="130dp"
                            android:layout_weight="1"
                            android:elevation="6dp"
                            app:cardBackgroundColor="@color/green_dark"
                            app:cardCornerRadius="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="12dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:fontFamily="@font/quicksand_bold"
                                    android:text="@string/add_expens"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_baseline_playlist_add_24"
                                    app:tint="@color/white" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:background="@color/browser_actions_bg_grey"
                app:layout_constraintTop_toBottomOf="@+id/cardView"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/chartCard"
                android:layout_marginHorizontal="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/browser_actions_bg_grey"
                app:layout_constraintTop_toBottomOf="@+id/view1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/all_expense"
                        android:fontFamily="@font/quicksand_bold"
                        android:textSize="16sp"
                        android:layout_margin="12dp"
                        android:textColor="@color/black"
                        />
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/allExpensePieChart"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"/>

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:layout_width="0dp"
                            android:layout_height="10dp"
                            app:cardCornerRadius="50dp"
                            app:cardBackgroundColor="@color/green_dark"/>
                        <TextView
                            android:layout_weight="20"
                            android:layout_marginStart="12dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Kendi Harcamalarım"
                            android:fontFamily="@font/quicksand_bold"
                            android:textColor="@color/green_dark"/>
                        <TextView
                            android:gravity="end"
                            android:layout_weight="5"
                            android:layout_marginStart="12dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="700 ₺"
                            android:fontFamily="@font/quicksand_bold"
                            android:textColor="@color/green_dark"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:layout_width="0dp"
                            android:layout_height="10dp"
                            app:cardCornerRadius="50dp"
                            app:cardBackgroundColor="@android:color/darker_gray"/>
                        <TextView
                            android:layout_weight="20"
                            android:layout_marginStart="12dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Diğer kişilerin harcamaları"
                            android:fontFamily="@font/quicksand_bold"
                            android:textColor="@android:color/darker_gray"/>
                        <TextView
                            android:gravity="end"
                            android:layout_weight="5"
                            android:layout_marginStart="12dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="300 ₺"
                            android:fontFamily="@font/quicksand_bold"
                            android:textColor="@android:color/darker_gray"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:layout_width="0dp"
                            android:layout_height="10dp"
                            app:cardCornerRadius="50dp"
                            app:cardBackgroundColor="@android:color/black"/>
                        <TextView
                            android:layout_weight="20"
                            android:layout_marginStart="12dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Toplam Harcama"
                            android:fontFamily="@font/quicksand_bold"
                            android:textColor="@android:color/black"/>
                        <TextView
                            android:gravity="end"
                            android:layout_weight="5"
                            android:layout_marginStart="12dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="1000 ₺"
                            android:fontFamily="@font/quicksand_bold"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="12dp"
                android:background="@color/browser_actions_bg_grey"
                app:layout_constraintTop_toBottomOf="@id/chartCard" />

            <androidx.cardview.widget.CardView
                android:id="@+id/expenseCard"
                android:layout_marginHorizontal="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/browser_actions_bg_grey"
                app:layout_constraintTop_toBottomOf="@+id/view2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kişi Başı"
                        android:fontFamily="@font/quicksand_bold"
                        android:textSize="16sp"
                        android:layout_margin="12dp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_marginBottom="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="250  ₺"
                        android:gravity="center"
                        android:fontFamily="@font/quicksand_bold"
                        android:textSize="24sp"
                        android:layout_margin="12dp"
                        android:textColor="@color/green_dark"
                        />

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <View
                app:layout_constraintTop_toBottomOf="@+id/expenseCard"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>